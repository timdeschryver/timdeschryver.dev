{
	"name": "timdeschryver.dev",
	"author": "Tim Deschryver",
	"description": "timdeschryver.dev",
	"version": "0.0.1",
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "^20.0.0"
	},
	"scripts": {
		"dev": "vite dev",
		"prebuild": "rimraf build && npm run copy:content",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"test:unit": "vitest",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --write --plugin-search-dir=. .",
		"copy:content": "npm run copy:blog && npm run copy:bits",
		"copy:blog": "cpy 'blog/**/*.*' '!blog/**/*.md' 'static/blog'",
		"copy:bits": "cpy 'bits/**/*.*' '!bits/**/*.md' 'static/bits'",
		"g": "node ./scripts/generate",
		"gb": "node ./scripts/generate-bit",
		"p": "node ./scripts/devto",
		"banners": "node ./scripts/banners.js",
		"pre-commit": "npm run banners && git add ./**/banner.png && lint-staged",
		"optimize:image": "node ./scripts/optimize-image-cli.js",
		"optimize:images": "node ./scripts/optimize-images.js",
		"contributors": "node ./scripts/contributors.js",
		"postinstall": "svelte-kit sync",
		"prepare": "git config core.hookspath .githooks"
	},
	"devDependencies": {
		"@azure/static-web-apps-cli": "1.1.8",
		"@playwright/test": "1.41.2",
		"@squoosh/lib": "0.5.3",
		"@sveltejs/adapter-auto": "3.2.1",
		"@sveltejs/adapter-node": "4.0.1",
		"@sveltejs/adapter-static": "3.0.1",
		"@sveltejs/adapter-vercel": "5.3.0",
		"@sveltejs/kit": "2.5.10",
		"@sveltejs/vite-plugin-svelte": "3.1.0",
		"@testing-library/svelte": "4.1.0",
		"@types/marked": "6.0.0",
		"@typescript-eslint/eslint-plugin": "7.0.1",
		"@typescript-eslint/parser": "7.0.1",
		"axe-playwright": "2.0.1",
		"canvas-confetti": "1.9.3",
		"cpy-cli": "5.0.0",
		"dotenv-extended": "2.9.0",
		"eslint": "8.57.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-svelte": "2.39.0",
		"front-matter": "4.0.2",
		"jsdom": "24.0.0",
		"lint-staged": "15.2.4",
		"marked": "12.0.2",
		"node-fetch": "3.3.2",
		"playwright": "1.41.2",
		"prettier": "3.2.5",
		"prettier-plugin-svelte": "3.2.3",
		"rimraf": "5.0.7",
		"shiki": "1.6.0",
		"svelte": "4.2.17",
		"svelte-check": "3.7.1",
		"tslib": "2.6.2",
		"typescript": "5.4.5",
		"vite": "5.2.11",
		"vite-plugin-restart": "0.4.0",
		"vite-svg-loader": "5.1.0",
		"vitest": "1.2.2"
	}
}
