{
	"name": "timdeschryver.dev",
	"author": "Tim Deschryver",
	"description": "timdeschryver.dev",
	"version": "0.0.1",
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "^18.0.0"
	},
	"scripts": {
		"dev": "vite dev",
		"prebuild": "rimraf build && npm run copy:content",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --write --plugin-search-dir=. .",
		"copy:content": "npm run copy:blog",
		"copy:blog": "cpy 'blog/**/*.*' '!blog/**/*.md' 'static/blog'",
		"g": "node ./scripts/generate",
		"p": "node ./scripts/devto",
		"banners": "node ./scripts/banners.js",
		"pre-commit": "npm run banners && git add ./**/banner.jpg && lint-staged",
		"optimize:image": "node ./scripts/optimize-image-cli.js",
		"optimize:images": "node ./scripts/optimize-images.js",
		"contributors": "node ./scripts/contributors.js",
		"postinstall": "svelte-kit sync",
		"prepare": "git config core.hookspath .githooks"
	},
	"devDependencies": {
		"@azure/static-web-apps-cli": "1.1.3",
		"@playwright/test": "1.29.2",
		"@squoosh/lib": "0.5.3",
		"@sveltejs/adapter-auto": "1.0.3",
		"@sveltejs/adapter-node": "1.2.4",
		"@sveltejs/adapter-static": "1.0.6",
		"@sveltejs/adapter-vercel": "1.0.6",
		"@sveltejs/kit": "^1.20.4",
		"@types/marked": "4.3.1",
		"@typescript-eslint/eslint-plugin": "5.46.1",
		"@typescript-eslint/parser": "5.46.1",
		"axe-playwright": "1.2.3",
		"canvas-confetti": "1.6.0",
		"cpy-cli": "4.2.0",
		"dotenv-extended": "2.9.0",
		"esbuild": "0.18.3",
		"eslint": "8.42.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-plugin-svelte": "^2.31.1",
		"front-matter": "4.0.2",
		"lint-staged": "13.2.2",
		"marked": "4.3.0",
		"node-fetch": "3.3.1",
		"playwright": "1.29.2",
		"prettier": "2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"rimraf": "3.0.2",
		"shiki": "^0.14.0",
		"svelte": "^4.0.0",
		"svelte-check": "^3.4.3",
		"svelte-preprocess": "^5.0.3",
		"tslib": "2.5.3",
		"twitter-api-sdk": "1.2.1",
		"typescript": "^5.0.0",
		"vite": "4.3.9",
		"vite-plugin-restart": "0.3.1",
		"vite-svg-loader": "3.6.0"
	}
}
