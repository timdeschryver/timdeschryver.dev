{
	"name": "timdeschryver.dev",
	"author": "Tim Deschryver",
	"description": "timdeschryver.dev",
	"version": "0.0.1",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"predev": "npm run copy:content",
		"dev": "svelte-kit dev",
		"prebuild": "rimraf .svelte-kit && rimraf build && rimraf .vercel_build_output && npm run copy:content",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"test": "playwright test",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --write --plugin-search-dir=. .",
		"copy:content": "npm run copy:blog && npm run copy:snippets",
		"copy:blog": "copyfiles \"content/blog/**\" static --exclude=\"**/*.md\" --up=1",
		"copy:snippets": "copyfiles \"content/snippets/**\" static  --exclude=\"**/*.md\" --up=1",
		"g": "node ./scripts/generate",
		"p": "node ./scripts/devto",
		"banners": "node ./scripts/banners.js",
		"pre-commit": "npm run banners && git add ./content/**/banner.jpg && lint-staged",
		"optimize:image": "node ./scripts/optimize-image.js",
		"prepare": "git config core.hookspath .githooks"
	},
	"devDependencies": {
		"@playwright/test": "~1.17.0",
		"@squoosh/lib": "^0.4.0",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/adapter-node": "next",
		"@sveltejs/adapter-static": "next",
		"@sveltejs/adapter-vercel": "next",
		"@sveltejs/kit": "next",
		"@types/marked": "^4.0.2",
		"@typescript-eslint/eslint-plugin": "^5.9.0",
		"@typescript-eslint/parser": "^5.9.0",
		"axe-playwright": "^1.1.9",
		"copyfiles": "^2.4.1",
		"dotenv-extended": "^2.9.0",
		"esbuild": "^0.14.10",
		"eslint": "^8.6.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.3.0",
		"front-matter": "^4.0.2",
		"gatsby-remark-prismjs": "^6.4.0",
		"lint-staged": "^12.1.7",
		"marked": "^4.0.9",
		"node-fetch": "^3.1.0",
		"playwright": "~1.21.1",
		"prettier": "~2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"prismjs": "^1.26.0",
		"rimraf": "^3.0.2",
		"svelte": "^3.48.0",
		"svelte-check": "^2.7.0",
		"svelte-preprocess": "^4.10.6",
		"tslib": "^2.3.1",
		"typescript": "^4.5.4"
	}
}
