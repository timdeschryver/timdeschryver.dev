{
	"name": "timdeschryver.dev",
	"author": "Tim Deschryver",
	"description": "timdeschryver.dev",
	"version": "0.0.1",
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": ">= 12.17.0"
	},
	"scripts": {
		"dev": "svelte-kit dev",
		"prebuild": "rimraf .svelte-kit && rimraf .vercel_build_output && npm run copy:content",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --write --plugin-search-dir=. .",
		"copy:content": "npm run copy:blog && npm run copy:snippets",
		"copy:blog": "copyfiles \"content/blog/**\" static --exclude=\"**/index.md\" --up=1",
		"copy:snippets": "copyfiles \"content/snippets/**\" static  --exclude=\"**/*.md\" --up=1",
		"g": "node ./scripts/generate",
		"p": "node ./scripts/devto",
		"banners": "node ./scripts/banners.js",
		"pre-commit": "npm run banners && git add ./content/**/banner.jpg && lint-staged",
		"optimize:image": "node ./scripts/optimize-image.js",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@squoosh/lib": "^0.2.3",
		"@sveltejs/adapter-node": "next",
		"@sveltejs/adapter-static": "next",
		"@sveltejs/adapter-vercel": "next",
		"@sveltejs/kit": "next",
		"@typescript-eslint/eslint-plugin": "^4.19.0",
		"@typescript-eslint/parser": "^4.19.0",
		"copyfiles": "^2.4.1",
		"dotenv-extended": "^2.9.0",
		"eslint": "^7.22.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-svelte3": "^3.1.0",
		"gatsby-remark-prismjs": "^3.13.0",
		"husky": "^6.0.0",
		"lint-staged": "^11.0.0",
		"marked": "^2.0.1",
		"node-fetch": "^2.6.1",
		"playwright": "^1.10.0",
		"prettier": "~2.2.1",
		"prettier-plugin-svelte": "^2.2.0",
		"prismjs": "^1.23.0",
		"rimraf": "^3.0.2",
		"svelte": "^3.29.0",
		"svelte-preprocess": "^4.0.0",
		"tslib": "^2.0.0",
		"typescript": "^4.0.0",
		"vite": "^2.3.7"
	}
}
