{
	"name": "timdeschryver.dev",
	"author": "Tim Deschryver",
	"description": "timdeschryver.dev",
	"version": "0.0.1",
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "^20.0.0"
	},
	"scripts": {
		"dev": "vite dev",
		"prebuild": "rimraf build && npm run copy:content",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"test:ui": "playwright test --ui",
		"test:unit": "vitest",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --write --plugin-search-dir=. .",
		"copy:content": "npm run copy:blog && npm run copy:bits",
		"copy:blog": "cpy 'blog/**/*.*' '!blog/**/*.md' 'static/blog'",
		"copy:bits": "cpy 'bits/**/*.*' '!bits/**/*.md' 'static/bits'",
		"g": "node ./scripts/generate",
		"gb": "node ./scripts/generate-bit",
		"p": "node ./scripts/devto",
		"banners": "node ./scripts/banners.js",
		"pre-commit": "npm run banners && git add ./**/banner.png && lint-staged",
		"optimize:image": "node ./scripts/optimize-image-cli.js",
		"optimize:images": "node ./scripts/optimize-images.js",
		"contributors": "node ./scripts/contributors.js",
		"postinstall": "svelte-kit sync",
		"prepare": "git config core.hookspath .githooks"
	},
	"devDependencies": {
		"@azure/static-web-apps-cli": "^2.0.1",
		"@playwright/test": "1.48.2",
		"@squoosh/lib": "0.5.3",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-node": "^5.2.9",
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/adapter-vercel": "^5.4.6",
		"@sveltejs/kit": "2.8.0",
		"@sveltejs/vite-plugin-svelte": "4.0.0",
		"@testing-library/svelte": "5.2.4",
		"@types/marked": "6.0.0",
		"@typescript-eslint/eslint-plugin": "8.12.2",
		"@typescript-eslint/parser": "8.12.2",
		"axe-playwright": "2.0.3",
		"canvas-confetti": "1.9.3",
		"cpy-cli": "5.0.0",
		"dotenv-extended": "2.9.0",
		"eslint": "9.13.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-svelte": "2.46.0",
		"front-matter": "4.0.2",
		"jsdom": "25.0.1",
		"lint-staged": "15.2.10",
		"marked": "12.0.2",
		"node-fetch": "3.3.2",
		"playwright": "1.48.2",
		"prettier": "3.3.3",
		"prettier-plugin-svelte": "3.2.7",
		"rimraf": "5.0.10",
		"shiki": "1.22.2",
		"svelte": "5.1.12",
		"svelte-check": "4.0.5",
		"tslib": "2.8.1",
		"typescript": "5.6.3",
		"typescript-eslint": "^8.12.2",
		"vite": "5.4.10",
		"vite-plugin-restart": "0.4.1",
		"vite-svg-loader": "5.1.0",
		"vitest": "2.1.4"
	}
}
