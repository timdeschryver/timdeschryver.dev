{
	"name": "timdeschryver.dev",
	"author": "Tim Deschryver",
	"description": "timdeschryver.dev",
	"version": "0.0.1",
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "^16.0.0"
	},
	"scripts": {
		"dev": "vite dev",
		"prebuild": "rimraf build && npm run copy:content",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --write --plugin-search-dir=. .",
		"copy:content": "npm run copy:blog && npm run copy:snippets",
		"copy:blog": "cpy 'blog/**/*.*' '!blog/**/*.md' 'static/blog'",
		"copy:snippets": "cpy 'snippets/**/*.*' '!snippets/**/*.md' 'static/snippets'",
		"g": "node ./scripts/generate",
		"p": "node ./scripts/devto",
		"banners": "node ./scripts/banners.js",
		"pre-commit": "npm run banners && git add ./**/banner.jpg && lint-staged",
		"optimize:image": "node ./scripts/optimize-image-cli.js",
		"optimize:images": "node ./scripts/optimize-images.js",
		"contributors": "node ./scripts/contributors.js",
		"postinstall": "svelte-kit sync",
		"prepare": "git config core.hookspath .githooks"
	},
	"devDependencies": {
		"@azure/static-web-apps-cli": "1.0.2",
		"@playwright/test": "1.25.1",
		"@squoosh/lib": "0.4.0",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/adapter-node": "next",
		"@sveltejs/adapter-static": "next",
		"@sveltejs/adapter-vercel": "next",
		"@sveltejs/kit": "next",
		"@types/marked": "4.0.7",
		"@typescript-eslint/eslint-plugin": "5.30.7",
		"@typescript-eslint/parser": "5.30.7",
		"axe-playwright": "1.1.11",
		"canvas-confetti": "1.5.1",
		"cpy-cli": "4.2.0",
		"dotenv-extended": "2.9.0",
		"esbuild": "0.15.8",
		"eslint": "8.23.1",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-svelte3": "4.0.0",
		"front-matter": "4.0.2",
		"gatsby-remark-prismjs": "6.20.0",
		"lint-staged": "13.0.3",
		"marked": "4.1.0",
		"node-fetch": "3.2.10",
		"playwright": "1.25.1",
		"prettier": "2.7.1",
		"prettier-plugin-svelte": "2.7.0",
		"prismjs": "1.29.0",
		"rimraf": "3.0.2",
		"svelte": "3.50.1",
		"svelte-check": "2.9.0",
		"svelte-preprocess": "4.10.7",
		"tslib": "2.4.0",
		"twitter-api-sdk": "1.1.0",
		"typescript": "4.8.3",
		"vite": "3.1.3",
		"vite-plugin-restart": "0.2.0",
		"vite-svg-loader": "^3.6.0"
	}
}
